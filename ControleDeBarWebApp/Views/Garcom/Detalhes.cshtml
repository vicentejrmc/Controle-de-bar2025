@model DetalhesGarcomViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Detalhes do Garçom";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">

        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Detalhes</h3>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Id" class="control-label fs-5">Id:</label>
                    <input name="Id" class="form-control" value="@Model.Id" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Nome" class="control-label fs-5">Nome:</label>
                    <input name="Nome" class="form-control" value="@Model.Nome" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Cpf" class="control-label fs-5">CPF:</label>
                    <input name="Cpf" class="form-control" value="@Model.Cpf" readonly disabled />
                </div>
                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                    <a href="/garcons">Voltar para a listagem</a>
                </div>
            </div>
        </div>


    </div>
</div>